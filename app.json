{
  "expo": {
    "name": "Retina-Mobile-App",
    "slug": "Retina-Mobile-App",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Allow Retina mobile app to access your photos",
        "NSCameraUsageDescription": "Allow Retina mobile app to access your camera",
        "NSMicrophoneUsageDescription": "Allow Retina mobile app to access your microphone"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.anonymous.RetinaMobileApp",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.VIBRATE",
        "android.permission.ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "@react-native-voice/voice",
        {
          "microphonePermission": "Allow Retina mobile app to access your microphone",
          "speechRecognitionPermission": "Allow Retina mobile app to access your speech recognition"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Retina mobile app to access your photos",
          "cameraPermission": "Allow Retina mobile app to open the camera",
          
          "microphonePermission": false
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "68bd6181-bdfa-40ca-b273-6ca5682822cc"
      }
    }
  }
}
